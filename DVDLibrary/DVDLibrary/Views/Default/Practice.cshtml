@section scripts{
    <script type="text/javascript">

        $(function () {
            function hideMovieCats() {
                $(".movie").hide();
            }

            hideMovieCats();
            $("select")
                .change(function () {
                    hideMovieCats();
                    var genre = $("select option:selected").val();
                    $(".gen" + genre).show();

                });

            function hideOne() {
                $(".gensingle").hide();
            }

            hideOne();
            $("#inputBtn")
                .click(function (evt) {
                    hideOne();
                    evt.preventDefault();
                    var input = $("#movieTitle").val();
                    var jstring = "[data-title*='" + input.toLowerCase() + "']";
                    $(jstring).show();

                });

