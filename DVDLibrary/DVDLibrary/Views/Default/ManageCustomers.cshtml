                            <h4 class="modal-title" id="myModalLabel">@c.Name</h4>
                        </div>
                        <div class="modal-body">

                            <table>
                                <tbody>
                                    <tr>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Street Number
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @c.EmailAddress
                                        </td>
                                        <td>
                                            @c.StreetNumber
                                        </td>
                                    <tr>
                                        <th>
                                            Street Name
                                        </th>
                                        <th>
                                            City
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @c.StreetName
                                        </td>
                                        <td>
                                            @c.City
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            Zip Code
                                        </th>
                                        <th>
                                            Movie
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @c.ZipCode
                                        </td>
                                        <td>
                                            @c.Movie
                                        </td>
                                    </tr>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                       
                    </div>
                </div>
            </div>

        }

    </div>
</div>








