<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HR Portal</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-flatly.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
   <style>#myModal{right:50%;}</style>

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Policy", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Policies<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Policies", "ViewPolicies", "Policy")</li>
                            <li>@Html.ActionLink("Manage Policies", "ManagePolicies", "Policy")</li>
                            <li>@Html.ActionLink("Manage Categories", "ManageCategories", "Policy")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="row">
            <div class="col-xs-12">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Prestige WorldWide</p>
                </footer>
            </div>
        </div>
       
    </div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-default.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
   
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
    @RenderSection("validation", false)
    
    @RenderSection("tips", false)
</body>
</html>