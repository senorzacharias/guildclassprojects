@model Models.PolicyVM
@{
    ViewBag.Title = "ManageCategories";
}


<div class="col-xs-12 col-sm-9">

    <h2>Manage Categories</h2>
    <div class="row">
        <div class="col-xs-6">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Categories</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>
                            @category.CategoryName |@Html.ActionLink("Delete", "DeleteCategoryCont", "Policy", new { id = category.CategoryId }, null)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-xs-3 col-xs-offset-2">
            <button type="button" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="top" data-content="Categories can only be added in conjunction with a new policy on the Add Policy form.">
                How do I add a category?
            </button>
        </div>
    </div>
</div>

@section tips{
    <script type="text/javascript">

        $(function() {
            $('[data-toggle="popover"]').popover();
            $('.btn-default').popover(options);

        });
</script>
}