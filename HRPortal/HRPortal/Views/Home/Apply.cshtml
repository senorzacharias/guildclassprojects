@using System.Web.UI.WebControls
@model Models.ApplicationVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Apply</title>
    <meta name="viewport" content="width=device-width" initial-scale="1.0" />
    <link href="~/Content/bootstrap-flatly.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div>
        <div class="col-xs-12 col-sm-9">
            <div class="row">
                <div class="col-xs-12">
                    
                    <div class="row">
                        @using (Html.BeginForm())
                        {
                            <div class="col-xs-12 col-sm-7">
                                @Html.ValidationSummary(true)
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Job Application</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label> Name:</label>
                                                    @Html.TextBoxFor(m => m.Applicant.ApplicantName, new { @class = "form-control", PlaceHolder = "Burt Shavitz" })
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.ApplicantName)</p>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label> Email:</label>
                                                    @Html.TextBoxFor(m => m.Applicant.EmailAddress, new { @class = "form-control", PlaceHolder = "burtsbeez@gmail.com"})
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.EmailAddress)</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Street Number:</label>
                                                    @Html.TextBoxFor(m => m.Applicant.StreetNumber, new { @class = "form-control" })
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.StreetNumber)</p>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Street Name</label>
                                                    @Html.TextBoxFor(m => m.Applicant.StreetName, new { @class = "form-control", PlaceHolder = "Old CR 24"})
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.StreetName)</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>City</label>
                                                    @Html.TextBoxFor(m => m.Applicant.City, new { @class = "form-control", PlaceHolder = "Gnaw Bone" })
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.City)</p>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Zipcode</label>
                                                    @Html.TextBoxFor(m => m.Applicant.ZipCode, new { @class = "form-control", PlaceHolder = "20500" })
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.ZipCode)</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Employer</label>
                                                    @Html.TextBoxFor(m => m.Applicant.Employer, new { @class = "form-control", PlaceHolder = "Burt's Bees"})
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.Employer)</p>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Job Description</label>
                                                    @Html.TextBoxFor(m => m.Applicant.JobDescription, new { @class = "form-control", PlaceHolder = "Bee Keeper"})
                                                    <p class="help-block">@Html.ValidationMessageFor(m => m.Applicant.JobDescription)</p>
                                                </div>
                                            </div>
                                            <div class="col-xs-3 col-xs-offset-5">
                                                <button class="btn btn-primary">Save</button>
                                            </div>
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-default.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
